{
  "name": "strictly-dancing",
  "private": true,
  "version": "1.0.0",
  "description": "Global Dance Host Marketplace - connecting travelers and dance enthusiasts with qualified dance hosts",
  "workspaces": [
    "frontend",
    "apps/mobile"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && bun run dev",
    "dev:mobile": "cd apps/mobile && bun run start",
    "dev:backend": "cd backend && uv run uvicorn app.main:app --reload --port 8001",
    "build:frontend": "cd frontend && bun run build",
    "test:frontend": "cd frontend && bun run test",
    "test:mobile": "cd apps/mobile && bun run test",
    "test:backend": "cd backend && uv run pytest",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:mobile": "cd apps/mobile && bun run lint",
    "lint:backend": "cd backend && ruff check . && ruff format --check .",
    "tsc:frontend": "cd frontend && bun run tsc",
    "tsc:mobile": "cd apps/mobile && bun run tsc",
    "generate-types": "cd frontend && bun run generate-types && cd ../apps/mobile && bun run generate-types",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.1.0"
}
